:root {
  --bg: rgb(44,50,54);
  --bt: rgba(44,50,54,0.9);
  --mg: rgb(60,65,70);
  --tg: rgba(75,80,85,0.5);
  --ac: rgb(255,179,0);
  --do: rgb(200, 130, 40);
  --tp: rgba(0,0,0,0);

  --blue: rgb(70,180,240);
  --red: rgb(255,60,70);
  --green: rgb(100,255,120);
  --purple: rgb(210,80,200);
  --white: rgb(230,230,240);
  --black: rgb(0,0,0);
  --yellow: rgb(255,200,100);
  --lg: lightgray;
  --tg: rgba(255,255,255,0.5);
  --orange: #ffb300;
}





a.nav-link.external {
    position: relative !important;
}


/*Watch out for phone issues
---------------------------*/
.sidebar {
    font-size: 15px;
    width: 13rem;
}

@media only screen and (min-device-width: 1000px) {
.page {
    padding-left: 13rem;
}
}

@media (max-width: 959px) {
.theme-default-content:not(.custom) {
    padding: 3rem;
}
}

.external {
    position: relative !important;
}

a.mybutton:hover {
    color: var(--ac) !important;
}

p, ul, ol {
    line-height: 1.8;
}


.page-nav .inner {
    border-top: none !important;
}

.filter {
    filter: invert(50%) sepia(100%) saturate(270%) hue-rotate(0deg) brightness(130%) contrast(90%);
}

a.header-anchor {
    opacity: 1;
}

h1 a.header-anchor {
    opacity: 0;
}

h1, h2, h3, h4, h5 {
    font-family: menlo !important;
}

h1 {
    font-size: 37px;
}

h2 {
    color: var(--orange) !important;
    border-bottom: none;
    font-size: 28px;
}

@media only screen and (min-device-width: 1000px) {
h2 {
    margin-top: 30px !important;
}
}

h3 {
    font-size: 23px;
}

h4 {
    font-size: 17px;
}

h5 {
    font-size: 15px;
    font-weight: normal;
}

summary {
    line-height: 1.7;
    background-color: #282c34;
    padding-left: 10px;
}

.features {
    height: 0px;
    margin-top: 0px !important;
}



/*-------------------------------
DON'T TOUCH THIS, IT'S COMPLICATED DIV CENTERING!
-------------------------------*/
@media only screen and (min-device-width: 1000px) {
.external {
    display: table;
    position: absolute !important;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
}
}

@media only screen and (min-device-width: 1000px) {
.middle {
    display: table-cell;
    vertical-align: middle;
}
}

@media only screen and (min-device-width: 1000px) {
.internal {
    margin-left: auto;
    margin-right: auto;
    width: 600px;
}
}
/*---------------------------*/



a:hover {
    color: white !important;
    text-decoration: none !important;
}


.home .theme-default-content {
    margin-top: auto;
    margin-bottom: auto;
}


body, html {
    background-color: var(--bg);
}

blockquote {
    border-left: 0.3rem solid var(--ac) !important;
    background-color: rgba(0,0,0,0.2) !important;
    border-radius: 5px;
    padding: 15px;
}

blockquote p {
    font-color: white !important;
    padding: 5px;
}

#eastereggimage {
  width:50px;
  height:50px;
  margin-bottom:-2px;
  margin-left:-1px;
  image-rendering: pixelated;
}

#easteregg {
  display: block;
  width:50px;
  height:50px; 
  background-color:var(--grey);
  z-index:100;
  padding: 10px;
  margin-top: 300px;
}

.dice {
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 100;
  background-color: rgba(44,50,54,0.8);
  border-radius: 30px;
  margin: 20px;
}

@media only screen and (max-device-width: 1000px) {
    .mybutton {
        height: 65px;
        line-height: 1.2;
        padding-left: 38px !important;
    }
}

@media only screen and (max-device-width: 1000px) {
  .dice {
    width: 197px;
    height: 100px;
  }
}

#die1 {
    margin-right: -15px;
    bottom: 0;
}

@media only screen and (max-device-width: 1000px) {
  #die1 {
    margin-right: -13px;
  }
}

#die2 {
    bottom: 0;
}

.blue, .red, .green, .purple, .yellow, .white, .black {
    padding: 2.5px;
    margin: 2px;
    border-radius: 2px;
    font-weight: bold;
    background-opacity: 0.5;
}

.blue {
    border: 1.8px solid var(--blue);
}
.red {
    border: 1.8px solid var(--red);
}
.green {
    border: 1.8px solid var(--green);
}
.purple {
    border: 1.8px solid var(--purple);
}
.yellow {
    border: 1.8px solid var(--yellow);
}
.white {
    border: 1.8px solid var(--white);
}
.black {
    border: 1.8px solid var(--lg);
    color: white;
}

body, .sidebar {
    color: lightgrey !important;
}

.theme-default-content code {
    color: var(--ac) !important;
    background-color: rgb(39,44,53) !important;
}

.unitTypes {
    width: 120px;
    image-rendering: crisp-edges;
    margin-bottom: 20px;
}

.unitID {
    width: 221px;
    margin-bottom: 20px;
}

#app, .sidebar, html {
    background-color: var(--bg) !important;
    border: none;
}

 ul.suggestions {
    background-color: var(--mg) !important;
    border: none !important;
 }

#app .theme-container .home .features, .theme-container .home .footer {
    border-top: none;
}

.features {
    margin-top: 50px !important;
}

.navbar {
    background-color: var(--bt);
    border-bottom: none;
}

.links {
    background-color: var(--tp) !important;
}

.links .search-box input, ul.suggestions {
    background-color: var(--mg);
    border: none;
}

.search-box .suggestion.focused {
    background-color: var(--bg) !important;
    padding: none;
    margin: none;
}

.nav-links .nav-item {
    font-variant: small-caps;
}

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active {
    border-bottom: 4px solid var(--ac) !important;
}

.home .hero .action-button {
    color: var(--bg) !important;
    margin-top: 50px;
    font-family: monospace !important;
}

p, .footer {
    color: var(--lg) !important;
}

#main-title, .description {
    color: var(--ac) !important;
}

.sidebar-sub-headers a.sidebar-link, .sidebar .sidebar-links .sidebar-link  {
    color: lightgray !important;
}
.sidebar-sub-headers a.active.sidebar-link {
    color: var(--ac) !important;
}

.home .hero #main-title {
    font-family: "Teko" !important;
    text-transform: uppercase;
    font-size: 65px !important;
    margin-top: -75px;
}

.theme-container .navbar .home-link .site-name {
    font-family: sans-serif !important;
    font-weight: bold !important;
    color: var(--lg) !important;
}

.description {
    font-family: impact !important;
}

header.hero img {
    padding-top: 60px;
    object-fit: cover;
    image-rendering: pixelated;
    width: 470px;
}

